let current = 0;
let score = 0;
let answered = false;

function loadQuestion() {
    answered = false;
    document.getElementById("questionCount").innerText =
        `Î•ÏÏÏ„Î·ÏƒÎ· ${current + 1} / ${quiz.length}`;

    document.getElementById("question").innerText = quiz[current].q;

    const answersDiv = document.getElementById("answers");
    answersDiv.innerHTML = "";

    quiz[current].a.forEach((answer, index) => {
        const btn = document.createElement("button");
        btn.innerText = answer;
        btn.className = "answer-btn";
        btn.onclick = () => checkAnswer(btn, index);
        answersDiv.appendChild(btn);
    });
}

function checkAnswer(button, index) {
    if (answered) return;
    answered = true;

    const buttons = document.querySelectorAll(".answer-btn");

    buttons.forEach((btn, i) => {
        btn.disabled = true;
        if (i === quiz[current].c) btn.classList.add("correct");
        if (i === index && i !== quiz[current].c) btn.classList.add("wrong");
    });

    if (index === quiz[current].c) score++;
}

function nextQuestion() {
    if (!answered) return;

    current++;
    if (current < quiz.length) {
        loadQuestion();
    } else {
        document.querySelector(".quiz-container").innerHTML = `
            <h2>ğŸ‰ Î¤Î­Î»Î¿Ï‚ ÎšÎ¿Ï…Î¯Î¶</h2>
            <p>Î£ÎºÎ¿Ï: <strong>${score} / ${quiz.length}</strong></p>
            <button id="nextBtn" onclick="location.reload()">ÎÎµÎºÎ¯Î½Î± Î¾Î±Î½Î¬</button>
        `;
    }
}

loadQuestion();
